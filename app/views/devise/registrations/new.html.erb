<h2 style="text-align:center; margin-top:30px;">サインアップ</h2>

<div style="display:flex; justify-content:center; margin-top:20px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
    <div style="margin-bottom:10px;">
      <%= f.label :name, "ユーザー名" %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", style: "padding:5px; width:250px;" %>
    </div>

    <div style="margin-bottom:10px;">
      <%= f.label :email, "メールアドレス" %><br>
      <%= f.email_field :email, autocomplete: "email", style: "padding:5px; width:250px;" %>
    </div>

    <div style="margin-bottom:10px;">
      <%= f.label :password, "パスワード" %> <% if @minimum_password_length %> <em>(<%= @minimum_password_length %>文字以上)</em><% end %><br>
      <%= f.password_field :password, autocomplete: "new-password", style: "padding:5px; width:250px;" %>
    </div>

    <div style="margin-bottom:10px;">
      <%= f.label :password_confirmation, "パスワード確認" %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "padding:5px; width:250px;" %>
    </div>

    <div>
      <%= f.submit "サインアップ", style: "padding:5px 20px; background-color:#7ec7e0; border:none; border-radius:5px;" %>
    </div>

  <% end %>
</div>

<div style="text-align:center; margin-top:15px;">
  <%= link_to "ログインはこちら", new_user_session_path %>
</div>
