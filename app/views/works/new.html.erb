
<div class="post-form-container">
  <h2 class="form-title">投稿フォーム</h2>

  <%= form_with model: @work, local: true, html: { multipart: true, class: "post-form" } do |f| %>
    <div class="form-group">
      <%= f.text_field :title, placeholder: "作品の題名を入力してください", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.text_area :description, placeholder: "作品の詳細を入力してください", class: "form-control", rows: 5, required: true %>
    </div>

    <div class="form-group">
      <div class="upload-container">
        <div class="upload-area" onclick="document.getElementById('work_images').click()">
          <div class="upload-icon">＋</div>
          <div class="upload-text">ページを追加</div>
        </div>
        <%= f.file_field :images, multiple: true, accept: "image/*", class: "hidden-input", id: "work_images" %>
      </div>
      <small class="text-muted">複数の画像を選択可能です</small>
      <div class="preview-area" id="previewArea"></div>
    </div>

    <div class="form-submit">
      <%= f.submit "投稿する", class: "btn-submit" %>
    </div>
  <% end %>
</div>
