            <%= link_to work_path(work) do %>
              <%= image_tag work.images.first.variant(resize_to_limit: [400, 300]), style: "width: 100%; height: 100%; object-fit: cover;" %>
            <% end %>
          <% else %>
            <div style="color: #aaa; font-size: 40px;">üì∑</div>
