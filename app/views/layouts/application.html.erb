<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Coginner" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csp_meta_tag %>
  <%= csrf_meta_tags %>
  
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
<body>
  <header>
    <div class="logo">
      <%= link_to "coginner", root_path %>
    </div>
    
    <% if user_signed_in? %>
      <div class="user-nav">
        <%= link_to "＋", new_work_path, class: "nav-icon", title: "漫画を投稿する" %>
        <%= link_to "♡", likes_path, class: "nav-icon", title: "いいね一覧" %>
        <%= link_to "👤", profile_path, class: "nav-icon", title: "プロフィール" %>
        <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout-btn" %>
      </div>
    <% else %>
      <!-- ログイン前のヘッダー（ログインボタンのみ） -->
      <div class="login-nav">
        <%= link_to "ログイン", new_user_session_path %>
      </div>
    <% end %>

    <div class="search">
      <%= form_with url: works_path, method: :get, local: true do |f| %>
        <%= f.text_field :q, placeholder: "検索" %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
  </header>
  <main>
    <%= yield %>
  </main>
</body>
</html>